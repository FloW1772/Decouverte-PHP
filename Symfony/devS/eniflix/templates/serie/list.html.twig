{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Catalogue{% endblock %}

{% block body %}
    <h2>Catalogue</h2>

    <section>
    {% if page > 1 %}
        <a href="{{ path('serie_list', {'page' : page -1 }) }}">Page Précédente</a>&nbsp;
    {% endif %}
    {% if page < total_pages %}
        <a href="{{ path('serie_list', {'page' : page +1 }) }}">Page Suivante</a>&nbsp;
    {% endif %}
    </section>

    <table>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>status</th>
            <th>Genre</th>
            <th>vote</th>
            <th>popularity</th>
            <th>First air date</th>
            <th>Last air date</th>
            <th></th>
        </tr>
        {% for serie in series %}
            <tr>
                <td>{{ serie.id }}</td>
                <td>{{ serie.name }}</td>
                <td>{{ serie.status }}</td>
                <td>{{ serie.genre }}</td>
                <td>{{ serie.vote }}</td>
                <td>{{ serie.popularity }}</td>
                <td>{{ serie.firstAirDate|date('d/m/Y') }}</td>
                <td>{{ serie.lastAirDate ? serie.lastAirDate|date('d/m/Y') : '' }}</td>
                <td><a href="{{ path('serie_detail', { id: serie.id }) }}">Voir</a></td>
            </tr>
        {% else %}
            <tr>
                <td>Pas de données</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}